<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%r [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
<!--
%r is the amount of milliseconds since the application started.
-->
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>